{
  "name": "@clients/extension",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "npm run build -- --watch",
    "build": "npm run clean && npm run build:esbuild",
    "analyze": "pnpm analyze:check",
    "analyze:check": "biome check --verbose",
    "analyze:check:ci": "pnpm analyze:check --log-level=debug --reporter=github",
    "analyze:check:staged": "pnpm analyze:check --staged --no-errors-on-unmatched",
    "analyze:check:unsafe": "pnpm analyze:check --unsafe",
    "analyze:write": "biome check --write",
    "build:type": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && fix-esm-import-path dist",
    "build:esbuild": "tsx esbuild.config.ts",
    "format": "pnpm format:write && pnpm format:packages",
    "format:check": "biome format",
    "format:packages": "sort-package-json",
    "format:write": "biome format --write",
    "lint:check": "biome lint",
    "lint:write": "biome lint --write",
    "type:check": "tsc --noEmit",
    "start:debug": "pnpm start:dev --debug --type-check",
    "start:dev": "pnpm start --watch",
    "start:prod": "node dist/main",
    "generate:manifest-types": "quicktype --src-lang schema --lang ts --src https://json.schemastore.org/chrome-manifest --out types/manifest.d.ts",
    "test": "pnpm test:base",
    "test:all": "pnpm test:unit && pnpm test:integration",
    "test:unit": "pnpm test:base",
    "test:base": "vitest",
    "test:benchmark": "pnpm test:base --mode benchmark",
    "test:cov": "pnpm test:base --coverage",
    "test:debug": "pnpm test:base --inspect-brk --no-file-parallelism",
    "test:debug:single-fork": "pnpm test:base --inspect-brk --pool forks --poolOptions.forks.singleFork",
    "test:debug:single-thread": "pnpm test:base --inspect-brk --pool threads --poolOptions.threads.singleThread",
    "test:integration": "pnpm test:base -c vitest.config.integration.ts",
    "test:snapshot:update": "pnpm test:base --update --ui",
    "test:watch": "pnpm test:base --watch",
    "prebuild": "rimraf dist",
    "clean": "rimraf dist",
    "copy-static": "copyfiles -u 2 \"src/static/**/*\" dist",
    "copy-manifest": "copyfiles manifest.json dist"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@jgoz/esbuild-plugin-typecheck": "^4.0.1",
    "@tools/biome": "workspace:^",
    "@tools/typescript": "workspace:^",
    "@tools/vitest": "workspace:^",
    "@types/chrome": "^0.0.270",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitest/coverage-v8": "^2.0.4",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.23.1",
    "json-schema-to-ts": "^3.1.1",
    "json-schema-to-typescript": "^15.0.2",
    "quicktype": "^22.0.0",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.5",
    "tsx": "^4.16.3",
    "typescript": "^5.5.4",
    "vitest": "^2.0.4"
  },
  "dependencies": {
    "@extend-chrome/storage": "^1.5.0",
    "axios": "^1.7.7",
    "inversify": "^6.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.23.8"
  }
}
