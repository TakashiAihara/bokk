{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./types",
      "./node_modules/vitest"
    ],
    "types": [
      "chrome",
      "chrome.readingList",
      "globals"
    ],
    "outDir": "./dist",
    "baseUrl": "./",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@application/*": [
        "src/application/*"
      ],
      "@presentation/*": [
        "src/presentation/*"
      ],
      "@infrastructure/*": [
        "src/infrastructure/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "extends": "@tools/typescript/tsconfig.json"
}
